<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MVVMAssignment1.Views.ParameterView">
  <ContentView.Content>
      <StackLayout Spacing="12">
            <Entry x:Name="txtParameterName" Text="{Binding Name}" HeightRequest="40" BackgroundColor="White" Placeholder="Parameter Name" HorizontalOptions="FillAndExpand"/>
            <Entry  x:Name="txtValue" Text="{Binding Value}" BackgroundColor="White" HeightRequest="40" Placeholder="Parameter Value" HorizontalOptions="FillAndExpand"/>
        </StackLayout>
  </ContentView.Content>
</ContentView>